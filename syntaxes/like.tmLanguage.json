{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Like",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.like",
          "match": "\\b(if|or|not|then|else|of|end|file|var|if|while|repeat|choose|elseif|fun|is|like|pkg|public|using|val|when)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.like",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.like",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.like"
}
